<style>
    .custom-container {
        margin: 2em;
    }
    .bg-green {
        background-color: #C5EBAA;
    }
</style>
   {{> navbar isLoggedIn=true }}
<div class="custom-container">
 
    <!-- Content for the home page -->
    <div class="container-fluid">
        <div class="row p-3">

            <!-- Profile Image Section -->
            <style>
                .large-img {
                    width: 100%;
                }
            </style>
            <div class="col-6 d-flex justify-content-center">
                <img src="{{img}}" class="img-fluid large-img mx-auto" alt="Profile Image">
            </div>

            <!-- About Me and Progress Bars Section -->
            <div class="col-6">
                <!-- About Me -->
                <div class="mb-4">
                    <h2 class="card-text" style="color: black;"><strong>Playlist Name</strong>: {{playlistName}}</h2>
                </div>

                <!-- Progress Bars -->
                <style>
                    .bg-white {
                        background-color: white;
                    }
                    .bg-black {
                        background-color: black;
                    }
                </style>

                <div>
                    <h4>Danceability</h4>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-black" role="progressbar" style="width: {{averageDanceability}}%" aria-valuenow="{{averageDanceability}}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4>Energy</h4>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-black" role="progressbar" style="width: {{averageEnergy}}%" aria-valuenow="{{averageEnergy}}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4>Valence</h4>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-black" role="progressbar" style="width: {{averageValence}}%" aria-valuenow="{{averageValence}}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Stats Bar -->
    <div class="row bg-dark text-white p-2">
        <!-- Dashboard Container -->
        <div class="row p-3">
            <!-- Previous content such as Profile Image and About Me sections would go here -->
        </div>

        <!-- Stats Bar redesigned as Genres and Mood sections -->
        <div class="row bg-dark text-white p-2">
            <div class="col-12">
                <h3>Mood: {{mood}} </h3>
                <h4>Mood percentage : {{mood_percent}}%</h4>
            </div>
        </div>
    </div>
<h2 class="text-center mt-5 mb-5 text-black">Top Genres</h2>
    <!-- Right Column for Top Genres, Moods, and Carousel -->
    <div class="bg-dark text-white p-3 rounded mb-4">
    
        <div>
            {{#each genres}}
            <span class="badge bg-black me-2">{{this.genre}}</span>
            {{/each}}
        </div>
    </div>
<h2 class="text-center mt-5 mb-5 text-black">Matched Playlists</h2>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Playlist </th>
            <th scope="col">Creator</th>
            <th scope="col">Mood</th>
            <th scope="col">Mood Percent</th>
        </tr>
    </thead>
    <tbody>
        {{#each matches}}
        <tr>
            <td>{{this.playlist_name}}</td>
            <td>{{this.playlist_owner}}</td>
            <td>{{this.mood_name}}</td>
            <td>{{this.mood_percent}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
    <!-- Carousel Container -->
    <div class="carousel-container" style="max-width: 75%; margin: auto;">
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {{#each songs.tracks.items}}
                <div class="carousel-item {{#if @first}}active{{/if}}">
                    {{#with this.track.album.images.[0]}}
                    <img src="{{url}}" class="d-block w-100" alt="..." style="height: auto; object-fit: cover;">
                    {{/with}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="carousel-controls text-center mt-2">
        <button class="btn carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        {{!-- <button class="btn btn-primary" onclick="toggleCarousel('carouselExample', this)">Play/Pause</button> --}}
        <button class="btn carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>